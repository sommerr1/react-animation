{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Server",
      "type": "npm",
      "script": "dev:start",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Stop Dev Server",
      "type": "npm", 
      "script": "dev:stop",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Full Git Push",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "git add . ; git commit -m \"${input:commitMessage}\" ; git push origin master"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Build for Netlify",
      "type": "npm",
      "script": "build",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Deploy to Netlify",
      "type": "shell",
      "command": "npx",
      "args": [
        "netlify",
        "deploy",
        "--prod",
        "--dir=build"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": [],
      "dependsOrder": "sequence",
      "dependsOn": "Build for Netlify"
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "description": "Enter commit message",
      "default": "Update project",
      "type": "promptString"
    }
  ]
}
